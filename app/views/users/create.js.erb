var $form = $("#form-sign-up");
var $modal = $("#modal-sign-up");

<% if @user.errors.empty? %>

  var $modalSuccess = $("<%= escape_javascript render 'shared/modal_sign_up_success',
                        :user => @user %>");

  $modal.replaceWith($modalSuccess);

<% else %>
  var $newModal = $("<%= escape_javascript render 'shared/modal_sign_up',
                   user: @user %>");
  $modal.replaceWith($newModal);
<% end %>
